@using ServicosEPedidos_Mod_17E.Helper;
@model IEnumerable<ServicosEPedidos_Mod_17E.Models.Pedido>

@{
    ViewBag.Title = "Index";
}

<h2>Pedidos</h2>

@Html.ValidationSummary(true, "", new { @class = "text-danger" })
<p>@ViewBag.mensagem</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdClie.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataPed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Where(x => x.Estado == false))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdClie.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataPed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.IdPed })
            </td>
        </tr>
    }
</table>
<br />

@if (User.IsInRole("Cliente"))
{
    <h2>Pedidos Aceites</h2>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <p>@ViewBag.mensagem</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdClie.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataPed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Where(x => x.Estado == true))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdClie.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataPed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.IdPed })
                </td>
            </tr>
        }
    </table>

}